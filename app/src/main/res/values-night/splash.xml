<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ReaderCapstoneApp.Splash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/Color1DarkGreen</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_splash_inset</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.ReaderCapstoneApp</item>
    </style>
</resources>